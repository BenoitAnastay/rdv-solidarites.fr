.card.mb-3
  .card-body
    ul.list-group.list-group-flush
      li.list-group-item
        .fa.fa-calendar>
        | Le #{l(rdv.starts_at, format: :human)} (durée : #{rdv.duration_in_min} minutes)
        = future_tag(rdv)
      - if rdv.location
        li.list-group-item
          .fa.fa-map-marker>
          = human_location(rdv)
      - if rdv.motif.by_phone
        li.list-group-item
          .fa.fa-phone>
          | RDV Téléphonique
      li.list-group-item
        .fa.fa-user>
        = current_user.full_name
      li.list-group-item
        i.fa.fa-info-circle>
        = rdv.motif.name
