- content_for :title do
  | Choisir le motif

.card
  - if @first_step.rdv.start_at.present?
    ul.list-group.list-group-flush
      li.list-group-item
        i.fa.fa-check.fa-fw.mr-1.text-success
        = "Commence le : #{l(@first_step.rdv.start_at, format: :human)}"
  .card-body
    = render partial: 'layouts/model_errors', locals: { model: @first_step }
    = simple_form_for(@first_step.rdv, url: first_steps_path) do |f|
      = f.association :motif, collection: policy_scope(Motif), include_blank: "SÃ©lectionnez un motif"
      = f.input :start_at, as: :hidden
      .text-right
        = f.button :submit, 'Continuer'
