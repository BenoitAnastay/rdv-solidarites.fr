import "places.js";
console.log('loaded');

var places = require('places.js');

class PlacesInput {
  constructor(container) {
    console.log('loaded 2');

    if (container !== null) {
      places({
        type: 'address',
        appId: "<%= ENV['PLACES_APP_ID'] %>",
        apiKey: "<%= ENV['PLACES_API_KEY'] %>",
        countries: ['FR'],
        templates: {
          value: function(suggestion) {
            return suggestion.name + ', ' + suggestion.postcode + ' ' + suggestion.city ;
          },
        },
        container: container
      });
    }
  }
}

export { PlacesInput };
